      <!-- <div class="col-sm|md-4"> optional, but Daniel prefer without -->
      <div class="col">
        <h1>VENUE.VIDI.VICI</h1>
        <div class=“topnav”>
          <%= simple_form_for :search, url: venues_path , :method => :get do |f| %>
              <%= f.input :query, label: 'Where?', wrapper_html: { class: 'username' }, placeholder: 'vvvenue', hint: 'or anywhere in the world', :autofocus => true %>
              <%= f.submit "Search" %>
          <% end %>
        </div>
      </div>
      <div class="col">
        <!-- nada aqui, apenas para manter 3 colunas -->
      </div>
    </div>
  </div>
</div>



