<div id="background">

<div class="container">
  <div class="row justify-content-end align-items-center">
    <!-- <div class="d-flex align-items-center"> optional , but Daniel prefer without-->
    <div>
      <%= link_to 'host your vvvenue', destroy_user_session_path, method: :delete  %><!--  link here needs to be changed -->
    </div>
    <div class="mx-3">
      <%= cl_image_tag("danielle-the-bartender_uc7vck", :cloud_name => 'danielcastro',
        radius: 25, width: 50, height: 50, crop: :thumb, gravity: :face) %>
    </div>
    <div>
      <%= link_to 'sign out', destroy_user_session_path, method: :delete  %>
