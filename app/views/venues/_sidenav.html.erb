<div class="container">
  <div class="sidenav d-flex justify-content-between flex-column">
    <div>
      <%= link_to cl_image_tag("logo_spqr_laurel_bg", :cloud_name => 'danielcastro', width: 100), root_path %>
      <%= link_to 'search', root_path %>
      <% if current_user %>
        <%= link_to 'dashboard', my_own_path  %>
        <%= link_to 'rent your vvvenue', new_venue_path, method: :get %>
        <%= link_to "my bookings", bookings_path %>
      <% else %>
        <%= link_to 'dashboard', new_user_session_path  %>
        <%= link_to 'rent your vvvenue', new_user_session_path, method: :get %>
        <%= link_to "my bookings", new_user_session_path %>
      <% end %>
    </div>

    <div>
      <% if current_user %>
        <div>
          <%= cl_image_tag("danielle-the-bartender_uc7vck", :cloud_name => 'danielcastro', width: 50, height: 50,
                            crop: :thumb, gravity: :face, class: "rounded-circle") %>
        </div>
        <%= link_to 'sign out', destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to 'sign in', new_user_session_path, method: :get, class: "no-style" %>
      <% end %>
    </div>
  </div>
</div>
